@page
@model ManufacturerManagerTS.FrontEnd.Pages.ManufacturerPages.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>Manufacturer Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Status.StatusName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer.StaffMemberCreated.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.StaffMemberCreated.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer.LastUpdated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.LastUpdated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer.StaffMemberUpdated.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.StaffMemberUpdated.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-manufacturerId="@Model.Manufacturer.ManufacturerId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<br />

<h4>Widgets</h4>

@if (!Model.Manufacturer.Widgets.Any())
{
    <label>No Widgets found for this Manufacturer</label>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var widget in Model.Manufacturer.Widgets.OrderBy(w => w.Name))
            {
                <tr>
                    <td>
                        @widget.Name
                    </td>
                    <td>
                        <a asp-page="/WidgetPages/Details" asp-route-widgetId="@widget.WidgetId">Details</a> |
                        <a asp-page="/WidgetPages/Edit" asp-route-widgetId="@widget.WidgetId">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

