@page
@using ManufacturerManagerTS.BusinessLogic.Extensions
@model ManufacturerManagerTS.FrontEnd.Pages.ManufacturerPages.IndexModel
@{
    ViewData["Title"] = "Manufacturers";
}

<h1>Manufacturers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<p>
    @Model.ManufacturerList.Count record@(@Model.ManufacturerList.Count.ShowCorrectRecordText()) found
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturerList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturerList[0].Widgets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturerList[0].Status.StatusName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manufacturer in Model.ManufacturerList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => manufacturer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => manufacturer.Widgets.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => manufacturer.Status.StatusName)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-manufacturerId="@manufacturer.ManufacturerId">Details</a> |
                    <a asp-page="./Edit" asp-route-manufacturerId="@manufacturer.ManufacturerId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

