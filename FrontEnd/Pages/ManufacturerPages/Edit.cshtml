@page
@model ManufacturerManagerTS.FrontEnd.Pages.ManufacturerPages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Manufacturer</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Manufacturer.ManufacturerId" />
            <div class="form-group">
                <label asp-for="Manufacturer.Name" class="control-label"></label>
                <input asp-for="Manufacturer.Name" class="form-control" autofocus />
                <span asp-validation-for="Manufacturer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer.StatusId" class="control-label"></label>
                <select asp-for="Manufacturer.StatusId" class="form-control" asp-items="@Model.ManufacturerPagesValues.StatusesSelectList()"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


