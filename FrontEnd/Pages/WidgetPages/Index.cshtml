@page
@using ManufacturerManagerTS.BusinessLogic.Extensions
@model ManufacturerManagerTS.FrontEnd.Pages.WidgetPages.IndexModel
@{
    ViewData["Title"] = "Widgets";
}

<h1>Widgets</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<p>
    @Model.WidgetList.Count record@(Model.WidgetList.Count.ShowCorrectRecordText()) found
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WidgetList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WidgetList[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WidgetList[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var widget in Model.WidgetList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => widget.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => widget.Manufacturer.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => widget.Status.StatusName)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-widgetId="@widget.WidgetId">Details</a> |
                    <a asp-page="./Edit" asp-route-widgetId="@widget.WidgetId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>